@{
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Démonstrations : @ViewData["Title"]</title>
</head>
<body>
    <h1>Démonstrations d'utilisation de l'identifiant d'une liste de produits</h1>
    <h2>Vue détaillée de @Model.Name</h2>
    <p><strong>@Model.Price.ToString("C")</strong></p>
    @if(Model.IsAvailable())
    {
        <p>En stock</p>
    }
    else
    {
        <p>Plus disponible...</p>
    }
</body>
</html>