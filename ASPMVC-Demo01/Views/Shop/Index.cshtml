@using ASPMVC_Demo01.Models;
@model IEnumerable<ProductListItem>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

    @if (TempData.ContainsKey("errorMessage"))
    {
        <div style="background-color:rgb(255,200,200);color:rgb(64,0,0);border:solid 1px rgb(64,0,0);margin:20px;padding:15px;border-radius:15px; text-align : center">
            <p>@TempData["errorMessage"]</p>
        </div>
    }
    <h1>Démonstrations d'utilisation de l'identifiant d'une liste de produits</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Article</th>

            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (ProductListItem item in Model)
                {
                    // <li><a href="/Shop/Details/@i">@item.Name - @item.Price.ToString("C")</a></li>
                    <tr><td>@Html.ActionLink(($"{@item.Name} - {item.Price.ToString("C")}"), "Details", new { id = @i })</td></tr>
                    // <li><a asp-action="Details" asp-route-id="@i">@item.Name - @item.Price.ToString("C")</a></li>
                    i++;
                }
            }
        </tbody>
    </table>
    
        
